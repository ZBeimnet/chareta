<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            app:startDestination="@+id/activity_main">
    <fragment
            android:id="@+id/"
            android:label="@string/home"
            tools:layout="@layout/create_post_fragment">

        <action
                android:id="@+id/action_home_dest_to_flow_step_one_dest"
                app:destination="@id/posted_item_fragment"/>
    </fragment>

    <fragment
            android:id="@+id/flow_step_one_dest"
            tools:layout="@layout/fragment_item_detail">
    </fragment>

    <fragment
            android:id="@+id/flow_step_two_dest"
            android:name="com.example.android.codelabs.navigation.FlowStepFragment"
            tools:layout="@layout/register-fragment">

        <action
                android:id="@+id/next_action"
                app:popUpTo="@id/login_fragment">
        </action>
    </fragment>


    <fragment
            android:id="@+id/flow_step_two_dest"
            android:name="com.example.android.codelabs.navigation.FlowStepFragment"
            tools:layout="@layout/register-fragment">

    </fragment>
    <fragment
            android:id="@+id/flow_step_two_dest"
            android:name="com.example.android.codelabs.navigation.FlowStepFragment"
            tools:layout="@layout/posted_item-fragment">
    </fragment>


    <fragment
            android:id="@+id/flow_step_two_dest"
            android:name="com.example.android.codelabs.navigation.FlowStepFragment"
            tools:layout="@layout/your_bids-fragment">

        <action
                android:id="@+id/next_action"
                app:popUpTo="@id/home_dest">
        </action>
    </fragment>


    <fragment
            android:id="@+id/flow_step_two_dest"
            android:name="com.example.android.codelabs.navigation.FlowStepFragment"
            tools:layout="@layout/status-fragment">

        <action
                android:id="@+id/next_action"
                app:popUpTo="@id/home_dest">
        </action>
    </fragment>


    <fragment
            android:id="@+id/settings_dest"
            tools:layout="@layout/login_fragment">
    <action
            android:id="@+id/next_action"
            app:popUpTo="@id/home_dest">
    </action>
    <fragment/>

</navigation>
